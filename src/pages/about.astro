---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const pageTitle = "私について";
const identity = {
  firstName: "Ibuki",
  country: "Japan",
  occupation: "software developer",
  hobbies: ["workout", "rugby", "programming"],
};
const skills = ["Java", "HTML", "CSS", "TypeScript", "Astro", "React"];
const happy = true;
const finished = false;
const goal = 3;
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <Header />

    <h1>{pageTitle}</h1>
    <h2>... そして私の新しいAstroサイトについて！</h2>

    <p>
      私はAstroサイトの入門チュートリアルを進めています。これは私のウェブサイトの2番目のページで、自分で作った初めてのページです！
    </p>

    <p>
      このサイトはチュートリアルを進めるに連れて更新されて行きます。定期的にチェックして、私の旅の様子を見にきてください！
    </p>

    <p>以下は私に関するいくつかの情報です。</p>
    <ul>
      <li>私の名前は{identity.firstName}です。</li>
      <li>
        {identity.country}に住んでおり、{
          identity.occupation
        }として働いています。
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            私の趣味は{identity.hobbies[0]}と{identity.hobbies[1]}です。
          </li>
        )
      }
      <p>私のスキルは以下の通りです。</p>
      <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul>
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {
      goal === 3 ? (
        <p>My doal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }
    <Footer />
  </body>
</html>
